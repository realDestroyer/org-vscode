{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "outDir": "out",
        "rootDir": "src",
        "moduleResolution": "node",
        "typeRoots": ["./node_modules/@types"],
        "types": ["vscode"],
        "lib": ["esnext"],
        "sourceMap": true,

        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitReturns": true, 
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
